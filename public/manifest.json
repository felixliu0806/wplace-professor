{
  "manifest_version": 3,

  "name": "WPlace Professor",
  "description": "A helper tool for creating pixel art on wplace.live",
  "version": "1.0",

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": "icon.png"
  },

  "side_panel": {
    "default_path": "sidepanel.html"
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/vendor.js", "js/content_script.js"],
          "run_at": "document_end"
      }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "storage",
    "sidePanel"
  ],

  "host_permissions": [
    "https://wplace.live/*"
  ],

  "web_accessible_resources": [
    {
      "resources": ["pixelit.min.js"],
      "matches": ["https://wplace.live/*"]
    }
  ]
}