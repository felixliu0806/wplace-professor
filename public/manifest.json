{
  "manifest_version": 3,
  "name": "WPlace Professor",
  "description": "Super useful WPlace tool: Save & share locations instantly, plus create pixel art with a powerful overlay.",
  "version": "1.0.1",
  "options_ui": {
    "page": "options.html"
  },
   "action": {
    "default_icon": {
      "16": "logo-16.png",
      "32": "logo-32.png",
      "48": "logo-48.png",
      "128": "logo-128.png"
    }
  },
  "icons": {
    "16": "logo-16.png",
    "32": "logo-32.png",
    "48": "logo-48.png",
    "128": "logo-128.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/vendor.js",
        "js/content_script.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": [
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "https://wplace.live/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "pixelit.js",
        "pixelit.min.js"
      ],
      "matches": [
        "https://wplace.live/*"
      ]
    }
  ]
}